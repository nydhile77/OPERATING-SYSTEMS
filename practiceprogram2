#include <stdio.h>

int main() {
    int n, i;
    
    printf("Enter the number of elements: ");
    scanf("%d", &n);
    
    int arr[n];
    
    printf("Enter %d elements:\n", n);
    for(i =0;i<n;i++) {
        scanf("%d",&arr[i]);
    }
    int min=arr[0];
    int position=0;   
    for(i=1;i<n;i++) {
        if(arr[i]<min) {
            min=arr[i];
            position=i;
        }
    }
    printf("Smallest number = %d\n",min);
    printf("Position = %d\n",position+1);  
    return 0;
}

OUTPUT:
Enter the number of elements: 4
Enter 4 elements:
5 6 7 8
Smallest number = 5
Position = 1
